<config>
   <sections>
        <api translate="label" module="w2p">
            <label>ZetaPrints Sync</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
					<fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                <a href="http://code.google.com/p/magento-w2p/wiki/ZetaPrints_Sync_Settings" target="_blank" title="Synchronization settings help">
							About ZetaPrints Sync settings</a>
                            ]]></comment>
                        </enabled>
						<w2p_url translate="label">
                            <label>ZetaPrints URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                Example: <b>http://orders.example.com</b>
                            ]]></comment>
                        </w2p_url>
						<w2p_key translate="label">
                            <label>ZetaPrints API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                Example: <b>617eca11-49fd-4ff7-bfa5-3d49391923ba</b>
                            ]]></comment>
                        </w2p_key>
						<w2p_store translate="label">
                            <label>Store</label>
                            <frontend_type>select</frontend_type>
							<source_model>api/opstore</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                Select store view of product
                            ]]></comment>
                        </w2p_store>
						<w2p_debug translate="label">
                            <label>Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                <b>Yes</b> - display additional progress info
                            ]]></comment>
                        </w2p_debug>
						<w2p_refresh translate="label">
                            <label>Refresh All</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[
                                Choose <b>No</b>. Read help before choosing <b>Yes</b>
                            ]]></comment>
                        </w2p_refresh>
						
						<w2p_private_product_not_exist translate="label">
                            <label><![CDATA[Private catalogs]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>api/oppnotexist</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[If Product <b>DOES NOT EXIST</b> in Magento.                                
                            ]]></comment>
                        </w2p_private_product_not_exist>
						<w2p_private_product_exist translate="label">
                            <label><![CDATA[Private catalogs]]></label>
                            <frontend_type>select</frontend_type>
                            <source_model>api/oppexist</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<comment><![CDATA[If Product <b>DOES EXIST</b> in Magento.                                
                            ]]></comment>
                        </w2p_private_product_exist>
                        <zetaprints-show-previews-in-option translate="label">
                          <label><![CDATA[Show previews in]]></label>
                          <frontend_type>select</frontend_type>
                          <source_model>api/show-previews-in-option</source_model>
                          <sort_order>9</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                          <comment><![CDATA[<b>Note:</b> Magento form is replaced with IFrame for multipage templates]]></comment>
                        </zetaprints-show-previews-in-option>
			         </fields>
                            </settings>
			</groups>
		</api>
	</sections>
</config>
