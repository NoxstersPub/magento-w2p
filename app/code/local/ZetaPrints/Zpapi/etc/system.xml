<config>
   <sections>
        <zpapi translate="label">
            <label>ZetaPrints Sync</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
          <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
              <comment><![CDATA[
                                <a href="http://www.zetaprints.com/help/zetaprints-synchronization-settings/" target="_blank" title="Synchronization settings help">
              About ZetaPrints Sync settings</a>
                            ]]></comment>
                        </enabled>
            <w2p_url translate="label">
                            <label>ZetaPrints URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
              <comment><![CDATA[
                                Example: <b>http://orders.example.com</b>
                            ]]></comment>
                        </w2p_url>
            <w2p_key translate="label">
                            <label>ZetaPrints API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
              <comment><![CDATA[
                                Example: <b>617eca11-49fd-4ff7-bfa5-3d49391923ba</b>
                            ]]></comment>
                        </w2p_key>
            <w2p_store translate="label">
                            <label>Store</label>
                            <frontend_type>select</frontend_type>
              <source_model>zpapi/opstore</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
              <comment><![CDATA[
                                Select store view of product
                            ]]></comment>
                        </w2p_store>
            <w2p_refresh translate="label">
                            <label>Refresh All</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
              <comment><![CDATA[
                                Choose <b>No</b>. Read help before choosing <b>Yes</b>
                            ]]></comment>
                        </w2p_refresh>
                        <templates-removing-behaviour>
                          <label>For deleted templates</label>
                          <frontend_type>select</frontend_type>
                          <source_model>ZetaPrints_Zpapi_Model_TemplateDeletingBehaviour</source_model>
                          <sort_order>7</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </templates-removing-behaviour>
                        <uploading-length-limit>
                          <label>File Uploading Limit</label>
                          <frontend_type>select</frontend_type>
                          <source_model>ZetaPrints_Zpapi_Model_FileUploadingLimit</source_model>
                          <sort_order>8</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>0</show_in_store>
                        </uploading-length-limit>
               </fields>
                            </settings>
      </groups>
    </zpapi>
  </sections>
</config>
